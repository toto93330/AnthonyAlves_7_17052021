{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

<div class="limiter">
	<div class="container-login100" style="background-image: url('{{ asset('assets/images/bg-01.jpg') }}');">
		<div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
			<span class="login100-form-title p-b-40">
				<img style="max-width: 250px"src="{{ asset('assets/images/logo.jpg') }}" alt="bilmo-logo">
			</span>
			<div class="text-center p-b-20">
				<h3>Profile Managers</h3>
			</div>
			
				{{ form_start(form) }}
				<div class="p-t-15 p-b-9"><span class="txt1">{{ form_label(form.passwordold) }}</span></div>
				<div class="wrap-input100 m-b-20 validate-input" data-validate="Your actual password is required">{{ form_widget(form.passwordold) }}</div>
				<div class="p-t-15 p-b-9"><span class="txt1">{{ form_label(form.newpassword.pass) }}</span></div>
				<div class="wrap-input100 m-b-20 validate-input">{{ form_widget(form.newpassword.pass) }}</div>
				<div class="p-t-15 p-b-9"><span class="txt1">{{ form_label(form.newpassword.confirm) }}</span></div>
				<div class="wrap-input100 m-b-40 validate-input">{{ form_widget(form.newpassword.confirm) }}</div>
				<button type="submit" class="login100-form-btn">Submit</button>

				{{ form_end(form) }}
		

			<div class="text-center p-t-33">
				<h3>Api Managers</h3>
			</div>
			<div class="p-t-15 p-b-9">
				<span class="txt1">
					Your api key
				</span>
			</div>

			<div class="wrap-input100 validate-input">
				<input id="js-token-2" class="input100" type="text" name="api-key" value="{{ user_api_key }}">

				<span class="focus-input100"></span>

			</div>

			<div class="p-t-31 p-b-9 d-none">
				<span class="txt1">
					Generated Api Key
				</span>
			</div>

			<div class="wrap-input100 validate-input d-none">
				<input id="js-token" class="input100" type="text" name="api-key" value="">

				<span class="focus-input100"></span>

			</div>

			<div class="text-center pt-2">
				<button type="button" class="login100-form-btn" onclick="onClickGenerateToken()">
					Generate New Key
				</button>
				<div id="js-message"> </div>
			</div>
			<div class="text-center pt-3"><small>You need help for bilmo api ?? <a href="/api/doc" target="_blank">click here</a> </small></div>
			<div class="w-full text-center p-t-55">
				<span class="txt2">
					Â© www.bilmo.com - All Rights Reserved.
				</span>
			</div>
		</div>
	</div>
</div>


<div id="dropDownSelect1"></div>

{% endblock %}